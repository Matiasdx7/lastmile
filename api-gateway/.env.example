# API Gateway Configuration
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=1h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Service URLs
ORDER_SERVICE_URL=http://localhost:3001
VEHICLE_SERVICE_URL=http://localhost:3002
ROUTE_SERVICE_URL=http://localhost:3003
DISPATCH_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
BPM_SERVICE_URL=http://localhost:3006
AUTH_SERVICE_URL=http://localhost:3007

# Logging
LOG_LEVEL=info